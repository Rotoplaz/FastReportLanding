---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import member1 from "../assets/images/integrante1.png";
import member2 from "../assets/images/integrante2.png";
import member3 from "../assets/images/integrante3.png";
---

<Layout>
	<div class="pt-20">

		<div class="m-auto w-10/12 md:w-8/12 mt-24">
			<h1 class="text-4xl md:text-5xl font-medium bg-clip-text text-transparent bg-gradient-to-r from-blue-800 to-sky-500 text-center mb-6">
				Nuestro Equipo
			</h1>
			<p class="text-xl text-gray-600 text-center mb-12">
				Expertos comprometidos en revolucionar la gestión de incidencias con tecnología de vanguardia
			</p>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
				<div class="bg-gradient-to-br from-white to-purple-50/30bg-gradient-to-br from-white to-purple-50/30 rounded-xl shadow-md p-6 border border-gray-100">
					<div class="w-48 h-48 mx-auto mb-4 rounded-full overflow-hidden bg-gray-200">
                        <Image
                            src={member1}
                            alt="Integrante 1"
                            class="w-full h-full object-cover"
                        />
                    </div>
					<h3 class="text-2xl font-bold text-blue-800 text-center mb-2">Saul</h3>
					<p class="text-gray-600 text-center mb-1">Líder</p>
					<p class="text-gray-600 text-center mb-1">Desarrollador</p>
					<p class="text-gray-600 text-center mb-1">Arquitecto</p>
					<p class="text-gray-600 text-center mb-1">Gerente de Proyecto</p>
				</div>

				<div class="bg-gradient-to-br from-white to-purple-50/30bg-gradient-to-br from-white to-purple-50/30 rounded-xl shadow-md p-6 border border-gray-100">
					<div class="w-48 h-48 mx-auto mb-4 rounded-full overflow-hidden bg-gray-200">
                        <Image
                        src={member2}
                        alt="Integrante 2"
                        class="w-full h-full object-cover"
                        />
                    </div>
					<h3 class="text-2xl font-bold text-blue-800 text-center mb-2">Jennyfher</h3>
					<p class="text-gray-600 text-center mb-1">Desarrolladora</p>
					<p class="text-gray-600 text-center mb-1">QA</p>
					<p class="text-gray-600 text-center mb-1">Desarrolladora Frontend</p>
				</div>

				<div class="bg-gradient-to-br from-white to-purple-50/30bg-gradient-to-br from-white to-purple-50/30 rounded-xl shadow-md p-6 border border-gray-100">
					<div class="w-48 h-48 mx-auto mb-4 rounded-full overflow-hidden bg-gray-200">
                        <Image
                        src={member3}
                        alt="Integrante 3"
                        class="w-full h-full object-cover"
                        />
                    </div>
					<h3 class="text-2xl font-bold text-blue-800 text-center mb-2">César</h3>
					<p class="text-gray-600 text-center mb-1">Desarrollador</p>
					<p class="text-gray-600 text-center mb-1">Analista de riesgos de seguridad</p>
					<p class="text-gray-600 text-center mb-1">Desarrollador Frontend</p>
					<p class="text-gray-600 text-center mb-1">Desarrollador Móvil</p>
				</div>
			</div>
		</div>

	</div>
</Layout>